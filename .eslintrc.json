{
    "env": {
        "browser": true,
        "es2021": true
    },
    "overrides": [
      {
        "files": [
          "./src/state/reducers/**.ts"
        ],
        "rules": {
          "default-param-last" : "off"
        }
      }
   ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
      "max-len": ["error", {"code": 160}]
    }
}
